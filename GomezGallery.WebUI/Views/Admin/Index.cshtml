@model IEnumerable<GomezGallery.Domain.Entities.Picture>

@{
	ViewBag.Title = "Admin: Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
	<div class="card-header">
		<h3>All Products</h3>
	</div>

	<div class="card-body">
		<table class="table table-striped table-condensed table-bordered">
			<tr>
				<th class="text-right">ID</th>
				<th>Name</th>
				<th class="text-right">Price</th>
				<th class="text-center">Actions</th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>@item.PictureID</td>
					<td>@Html.ActionLink(item.Name, "Edit", new { item.PictureID })</td>
					<td>@item.Price.ToString("c")</td>
					<td class="text-center">
						@using (Html.BeginForm("Delete", "Admin"))
						{
							@Html.Hidden("ProductID", item.PictureID)
							<input type="submit"
								   class="btn btn-danger"
								   value="Delete" />
						}
					</td>
				</tr>
			}
		</table>
	</div>
</div>

<div class="card-footer text-center">
	@Html.ActionLink("Add a new product", "Create", null, new { @class = "btn btn-primary" })
</div>