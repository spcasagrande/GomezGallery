@model GomezGallery.WebUI.Models.LoginViewModel

@{
	ViewBag.Title = "Login";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
	<div>
		<h3>Log in</h3>
	</div>

	<div class="card-body">
		<p class="lead">
			Please log in to access the Administration Area
		</p>

		@using (Html.BeginForm())
		{
			@Html.ValidationSummary()

			<div class="mb-3">
				<label for="UserName" class="form-label">Username</label>
				@Html.TextBoxFor(m => m.UserName, new { @class = "form-control", id = "UserName" })
			</div>

			<div class="mb-3">
				<label for="Password" class="form-label">Password</label>
				@Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "Password" })
			</div>

			<button type="submit" class="btn btn-primary">Log in</button>
		}
	</div>
</div>