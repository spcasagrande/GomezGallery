@model GomezGallery.Domain.Entities.Cart

@*Cart summary*@
<div class="navbar-text navbar-right">
	<b>Your cart: </b>
	@Model.Lines.Sum(x => x.Quantity) items(s),
	@Model.ComputeTotalValue().ToString("c")

	@*Checkout button*@
	@Html.ActionLink("Check Out", "Index", "Cart",
	new { returnUrl = Request.Url.PathAndQuery },
	new { @class = "btn btn-light text-dark ms-2 me-3" })
</div>